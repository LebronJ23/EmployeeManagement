@using EmployeeManagement.Controllers
@model ConfiguredCancelableAsyncEnumerable<Department>

<div class="m-2">
    <h3 class="bg-primary text-white text-center p-2">Departments</h3>
    <table class="table table-sm table-bordered table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>City</th>
                <th>Staff</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @await foreach (var department in Model)
            {
                <tr>
                    <td>@department.Id</td>
                    <td>@department.Name</td>
                    <td>@department.City</td>
                    <td>@DepartmentsController.GetStaff(department)</td>
                    <td>
                        <form asp-action="Delete" method="post">
                            <input type="hidden" name="departmentId" value="@department.Id" />
                            <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@department.Id">
                                Edit
                            </a>
                            <button type="submit" class="btn btn-sm btn-danger">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
            
        </tbody>
    </table>
    <a asp-action="Create"
       asp-route-returnController="Departments"
       asp-route-returnAction="Index" class="btn btn-primary">
        Create
    </a>
    <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">Back</a>
</div>